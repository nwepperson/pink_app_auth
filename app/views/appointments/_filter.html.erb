<%= form_for(:appointment, html: { class: "form-horizontal", role: "filter" }) do |f| %>
  <div class="form-group">
    <%= f.label :date, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= @date_filter = select(:appointment, :date, Appointment.uniq.order(date: :asc).pluck(:date)) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :time, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= @time_filter = f.time_select :time, ampm: true, :minute_step => 5, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :comment, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= @comment_filter = select(:appointment, :comment, Appointment.uniq.pluck(:comment)) %>
    </div>
  </div>
<% end %>
