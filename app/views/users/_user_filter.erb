<%= form_for(:user, html: { class: "form-horizontal", role: "user_filter" }) :get do |f| %>
  <div class="form-group">
    <%= f.label :first_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= @first_filter = select(:user, :first_name, User.uniq.order(first_name: :asc).pluck(:first_name)) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :last_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= @last_filter = select(:user, :last_name, User.uniq.order(last_name: :asc).pluck(:last_name)) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= @email_filter = select(:user, :email, User.uniq.order(email: :asc).pluck(:email)) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= @id_filter = select(:user, :id, User.uniq.order(id: :asc).pluck(:id)) %>
    </div>
  </div>
    <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag 'Filter', class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
